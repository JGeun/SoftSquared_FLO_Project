<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="175dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/selectTaste_item_frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true"
        android:tag="1">

        <ImageView
            android:id="@+id/selectTaste_rv_item_image"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/selectTaste_iv_checkImage"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@drawable/select_taste_image_check"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/selectTaste_iv_heart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_heart"
            android:layout_gravity="center"
            android:visibility="invisible"/>
    </FrameLayout>

    <TextView
        android:id="@+id/selectTaste_rv_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectTaste_recycler_item_name" />

</LinearLayout>