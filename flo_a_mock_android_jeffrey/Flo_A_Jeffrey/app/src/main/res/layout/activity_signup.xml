<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@color/whiteForBackground">

    <TextView
        android:id="@+id/signup_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/signup_iv_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <RelativeLayout
        android:id="@+id/signup_rl_logo"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_tv_title"
        android:layout_marginTop="90dp">

        <ImageView
            android:id="@+id/signup_iv_logo"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_logo"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/signup_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_title_message"
            android:textSize="14sp"
            android:layout_marginTop="50dp"
            android:layout_alignTop="@id/signup_iv_logo"
/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/signup_rl_emailLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/floForBtnColor"
        android:padding="10dp"
        android:layout_marginTop="85dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/signup_rl_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/signup_btn_emailLogin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_email_login"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_email_login_image"
            android:layout_toStartOf="@+id/signup_btn_emailLogin_text"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_rl_sktLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@color/sktLoginBtnColor"
        app:layout_constraintTop_toBottomOf="@id/signup_rl_emailLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/signup_btn_sktLogin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_skt_login"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_skt_login_image"
            android:layout_toStartOf="@+id/signup_btn_sktLogin_text"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_rl_naverLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@color/naverLoginBtnColor"
        app:layout_constraintTop_toBottomOf="@id/signup_rl_sktLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/signup_btn_naverLogin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_naver_login"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_naver_login_image"
            android:layout_toStartOf="@+id/signup_btn_naverLogin_text"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_rl_kakaoLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@color/kakaoLoginBtnColor"
        app:layout_constraintTop_toBottomOf="@id/signup_rl_naverLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/signup_btn_kakaoLogin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_kakao_login"
            android:textStyle="bold"
            android:textColor="@color/blackForText"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_kakao_login_image"
            android:layout_toStartOf="@+id/signup_btn_kakaoLogin_text"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_rl_appleLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@color/appleLoginBtnColor"
        app:layout_constraintTop_toBottomOf="@id/signup_rl_kakaoLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/signup_btn_appleLogin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_apple_login"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_apple_login_image"
            android:layout_toStartOf="@+id/signup_btn_appleLogin_text"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_findId"
            android:textSize="13sp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_findBetween"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_findPassword"
            android:textSize="13sp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>