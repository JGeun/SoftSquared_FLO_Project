<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/myList_item_totalLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/myList_item_album"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp">
        <ImageView
        android:id="@+id/myList_item_albumImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_my_list_album"/>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/myList_item_album"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/myList_tv_listTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="listTitle"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myList_tv_songCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myList_songCount"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/myList_item_iv_play"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_my_list_play_empty"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>